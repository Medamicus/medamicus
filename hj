<script>
  // Mobile menu
  document.getElementById('menuToggle').addEventListener('click', () => document.getElementById('mobileMenu').classList.toggle('open'));

  // Specialty toggle
  function toggleSpecialty(type) {
    document.getElementById('cardNeuro').className = 'specialty-card';
    document.getElementById('cardOnco').className = 'specialty-card';
    document.getElementById(type === 'neuro' ? 'cardNeuro' : 'cardOnco').classList.add(type === 'neuro' ? 'active-neuro' : 'active-onco');
  }

  // Save material
  function toggleSave(btn) {
    btn.classList.toggle('saved');
    btn.querySelector('svg').setAttribute('fill', btn.classList.contains('saved') ? 'currentColor' : 'none');
  }

  // News tabs
  function switchTab(tab, el) {
    document.querySelectorAll('.news-tab').forEach(t => t.classList.remove('active'));
    document.querySelectorAll('.news-panel').forEach(p => p.classList.remove('active'));
    el.classList.add('active');
    document.getElementById('panel-' + tab).classList.add('active');
  }
</script>
</body>
</html>
